<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:minWidth="150dp"
    android:background="@drawable/backgrnd"
    >

    <TextView android:text="Home Page" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home1"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  Main Menu"
        android:id="@+id/menu1"
        android:textSize="27dp"
        android:textStyle="italic"
        android:layout_below="@+id/home1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Groceries"
        android:id="@+id/btnmygroceries"
        android:width="400dp"
        android:background="#585858"
        android:textColor="#fffafad0"
        android:textStyle="bold|italic"
        android:textSize="25dp"
        android:layout_above="@+id/btnrecipe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Notifications"
        android:id="@+id/btnShowNotify"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:width="400dp"
        android:background="#585858"
        android:textColor="#fff7f7ce"
        android:layout_below="@+id/btnrecipe"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipes"
        android:id="@+id/btnrecipe"
        android:width="400dp"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:background="#585858"
        android:textColor="#fffeffd6"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grocery Store"
        android:id="@+id/btnStore"
        android:width="400dp"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:background="#585858"
        android:textColor="#fffeffd6"
        android:layout_below="@+id/btnShowNotify"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping List"
        android:id="@+id/btnShoplist"
        android:width="400dp"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:background="#585858"
        android:textColor="#fffeffd6"
        android:layout_below="@+id/btnStore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
