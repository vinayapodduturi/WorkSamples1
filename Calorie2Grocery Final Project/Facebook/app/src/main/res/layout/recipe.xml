<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/backgrnd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Recipes"
        android:id="@+id/textView3"
        android:width="400dp"
        android:textSize="30dp"
        android:textColor="#ff0a0a0a"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="107dp"
        android:layout_marginStart="107dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Recipe"
        android:id="@+id/btnsrchrecipe"
        android:layout_marginTop="70dp"
        android:width="300dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#fffffadd"
        android:background="#585858"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/btncreaterecipe"
        android:layout_alignStart="@+id/btncreaterecipe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Recipe"
        android:id="@+id/btncreaterecipe"
        android:width="300dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#585858"
        android:textColor="#fffdffe3"
        android:layout_below="@+id/btnsrchrecipe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Recipe"
        android:id="@+id/btnsharerecipe"
        android:width="300dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#585858"
        android:textColor="#fffdffe3"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/btncreaterecipe"
        android:layout_alignLeft="@+id/btncreaterecipe"
        android:layout_alignStart="@+id/btncreaterecipe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Recipe"
        android:id="@+id/btnupdrecipe"
        android:width="300dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#585858"
        android:textColor="#fffdffe3"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/btnsharerecipe"
        android:layout_alignLeft="@+id/btnsharerecipe"
        android:layout_alignStart="@+id/btnsharerecipe" />
</RelativeLayout>
